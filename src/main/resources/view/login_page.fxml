<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginPageController">
    <children>
        <Pane prefHeight="454.0" prefWidth="700.0" style="-fx-background-color: rgba( 23, 45, 33, 33.45);">
         <children>
            <ImageView fitHeight="480.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/steptodown.com325767.jpg" />
               </image>
            </ImageView>
         </children></Pane>
        <Pane layoutX="185.0" layoutY="70.0" prefHeight="360.0" prefWidth="350.0" style="-fx-background-color: rgb(51, 26, 0,0.5); -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 20, 0.4, 0, 4);">
            <children>
                <Label layoutX="55.0" layoutY="28.0" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" text="Welcome to Toga Kade" />
                <Label layoutX="110.0" layoutY="60.0" style="-fx-text-fill: #adb5bd; -fx-font-size: 13px;" text="Sign in to continue" />
                <Label layoutX="50.0" layoutY="105.0" style="-fx-text-fill: #dee2e6; -fx-font-size: 13px;" text="Username" />
                <TextField fx:id="username" layoutX="50.0" layoutY="130.0" prefHeight="35.0" prefWidth="250.0" promptText="Enter your username" style="-fx-background-color: rgba(255,255,255,0.15);                                   -fx-text-fill: white;                                   -fx-prompt-text-fill: #adb5bd;                                   -fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: rgba(255,255,255,0.3);" />
                <Label layoutX="50.0" layoutY="180.0" style="-fx-text-fill: #dee2e6; -fx-font-size: 13px;" text="Password" />
                <PasswordField fx:id="password" layoutX="50.0" layoutY="205.0" prefHeight="35.0" prefWidth="250.0" promptText="Enter your password" style="-fx-background-color: rgba(255,255,255,0.15);                                       -fx-text-fill: white;                                       -fx-prompt-text-fill: #adb5bd;                                       -fx-background-radius: 10;                                       -fx-border-radius: 10;                                       -fx-border-color: rgba(255,255,255,0.3);" />
                <Button fx:id="btnsignin" layoutX="50.0" layoutY="260.0" onAction="#loginonaction" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #00d926; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 14px;" text="Sign In">
                    <effect>
                        <DropShadow color="#00b4d8" radius="10" />
                    </effect>
                </Button>
                <Button fx:id="btnsignup" layoutX="50.0" layoutY="310.0" prefHeight="38.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-border-color: #00d926; -fx-border-radius: 10; -fx-text-fill: #00d926; -fx-font-weight: bold; -fx-font-size: 13px;" text="Create Account" />
            </children>
        </Pane>
    </children>
